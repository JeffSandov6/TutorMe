<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chooseMajor">

    <Button
            android:text="@string/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profilebutton" android:layout_marginEnd="26dp"
            android:layout_marginTop="29dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="26dp"
            android:layout_marginBottom="59dp" app:layout_constraintBottom_toTopOf="@+id/coscbutton"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="@string/computer_science"
            android:layout_width="300dp"
            android:layout_height="0dp" android:id="@+id/coscbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/profilebutton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/businessbutton"/>
    <Button
            android:text="@string/business"
            android:layout_width="300dp"
            android:layout_height="0dp" android:id="@+id/businessbutton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/coscbutton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/biologybutton"/>
    <Button
            android:text="@string/physics"
            android:layout_width="300dp"
            android:layout_height="0dp" android:id="@+id/physicsbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/biologybutton"
            android:layout_marginBottom="153dp"/>
    <Button
            android:text="@string/biology"
            android:layout_width="300dp"
            android:layout_height="0dp" android:id="@+id/biologybutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/businessbutton"
            app:layout_constraintBottom_toTopOf="@+id/physicsbutton"/>
</android.support.constraint.ConstraintLayout>