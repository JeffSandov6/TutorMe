<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setSchedule">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scheduleLayout">
        <TextView
                android:text="@string/current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="24sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/course1" android:hint="@string/course_1" android:autofillHints=""
                android:singleLine="true"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/course2" android:hint="@string/course_2" android:autofillHints=""
                android:singleLine="true"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/course3" android:inputType="text" android:hint="@string/course_3" android:singleLine="true"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/course4" android:inputType="text" android:hint="@string/course_4"
                android:autofillHints="" android:singleLine="true"/>
        <TextView
                android:text="@string/availabledays"
                android:layout_width="match_parent"
                android:layout_height="50dp" android:id="@+id/textView4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="24sp"/>
        <CheckBox
                android:text="Monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox"/>
        <CheckBox
                android:text="Tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox2"/>
        <CheckBox
                android:text="Wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox3"/>
        <CheckBox
                android:text="Thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox4"/>
        <CheckBox
                android:text="Friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox5"/>
        <CheckBox
                android:text="Saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox6"/>
        <CheckBox
                android:text="Sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox7"/>
        <Button
                android:text="@string/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/update"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="14sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>